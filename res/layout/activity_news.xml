<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    tools:context="com.example.assignment.NewsActivity" >

<TextView 
    android:id="@+id/news_txt_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textColor="@android:color/white"
    android:text="@string/news_header"
    android:textSize="@dimen/news_header_text_size"
    android:layout_marginTop="@dimen/news_header_margin_top"
    android:layout_marginBottom="@dimen/news_header_margin_top"/>

<ListView 
    android:layout_below="@id/news_txt_header"
    android:background="@android:color/white"
    android:id="@+id/listviewNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:dividerHeight="1dp"/> 

</RelativeLayout>